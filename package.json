    "check-node-version": "4.1.0",
    "codecov": "3.8.2",
    "commitizen": "4.2.4",
    "common-tags": "1.8.0",
    "cross-env": "7.0.3",
    "cz-lerna-changelog": "2.0.3",
    "debug": "4.3.1",
    "eslint": "7.26.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "6.15.0",
